<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dlg_round"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/notosanssc_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="Delete Movie"
        android:textColor="@color/colorYellow"
        android:textFontWeight="900"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/notosanssc_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="Are you sure you want to delete this movie?"
        android:textColor="@color/colorWhite"
        android:textFontWeight="900" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNo"
            android:text="No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="@drawable/btn_round3"
            android:theme="@style/ButtonStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightGrey" />

        <Button
            android:id="@+id/btnYes"
            android:text="Yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="@drawable/btn_round2"
            android:theme="@style/ButtonStyle"/>

    </LinearLayout>


</LinearLayout>