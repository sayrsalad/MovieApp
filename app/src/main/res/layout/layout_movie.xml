<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeMovieLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:clickable="true"
    app:dragEdge="right"
    app:mode="same_level">

    <!--Swipe Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnMoreMovie"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_info_24"
            android:background="@color/colorBackground"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="35dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btnEditMovie"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_edit_24"
            android:background="@color/colorDarkYellow"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="35dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/btnDeleteMovie"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_delete_24"
            android:background="@color/colorRedError"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="35dp"/>


    </LinearLayout>

    <!--Main Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_selector"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:clickable="true">


        <ImageView
            android:id="@+id/imgMoviePoster"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Movie Title"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txtMovieID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>