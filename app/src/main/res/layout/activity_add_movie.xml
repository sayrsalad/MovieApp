<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".AddMovieActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="   "
        android:elevation="2dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@android:color/transparent"
            android:layout_marginRight="12dp"
            android:onClick="cancelAddMovie"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Movie"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="18sp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="6dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/imgAddMoviePoster"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorYellow"
                android:gravity="center_horizontal"
                android:onClick="changeMoviePoster"/>
            
            <EditText
                android:layout_width="match_parent"
                android:hint="Title"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieTitle"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Story"
                android:textColorHint="@color/colorWhite"
                android:layout_height="100sp"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieStory"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Release Date"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieReleaseDate"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Film Duration"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieFilmDuration"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Additional Info"
                android:textColorHint="@color/colorWhite"
                android:layout_height="100sp"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieAdditionalInfo"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Genre"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieGenre"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:textColor="@color/colorWhite"/>

            <EditText
                android:layout_width="match_parent"
                android:hint="Certificate"
                android:textColorHint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAddMovieCertificate"
                android:layout_marginBottom="10sp"
                android:gravity="left"
                android:textColor="@color/colorWhite"/>

            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="42dp"
                android:text="Add"
                android:id="@+id/btnAddMovie"
                android:background="@drawable/btn_round"
                android:backgroundTint="@color/colorGrey"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="70dp"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:theme="@style/ButtonStyle"
                android:elevation="4dp"/>

            
        </LinearLayout>

    </ScrollView>

</LinearLayout>